{
  "name": "nestjs-login-jwt-roles",
  "version": "0.0.1",
  "description": "",
  "author": "Oswaldo Leon",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"**/**/*.ts\" --fix",
    "test": "jest --force-exit --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cov": "jest --coverage --force-exit --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --force-exit --detectOpenHandles",
    "validate": "npm run lint && npm run test:cov && git add ."
  },
  "dependencies": {
    "@nestjs/common": "9.3.10",
    "@nestjs/config": "2.3.1",
    "@nestjs/core": "9.3.10",
    "@nestjs/jwt": "10.0.2",
    "@nestjs/mongoose": "9.2.2",
    "@nestjs/passport": "9.0.3",
    "@nestjs/platform-express": "9.3.10",
    "@nestjs/swagger": "6.2.1",
    "argon2": "0.30.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "lodash": "4.17.21",
    "mongoose": "7.0.2",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.4.0",
    "rxjs": "7.8.0"
  },
  "devDependencies": {
    "@nestjs/cli": "9.3.0",
    "@nestjs/schematics": "9.0.4",
    "@nestjs/testing": "9.3.10",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.3",
    "@types/passport-jwt": "3.0.8",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "prettier": "2.8.4",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/JestSetEnvVars.js"
    ],
    "collectCoverageFrom": [
      "**/*.service.ts",
      "**/*.controller.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
